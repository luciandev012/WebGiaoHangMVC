<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebGiaoHang</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="logo-box">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <img src="~/imgs/logo.png" alt="logo" class="logo" />
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item nav-item-active">
                            <a class="nav-link text-dark text-medium" asp-area="" asp-controller="Home" asp-action="Index">Gửi hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark text-medium" asp-controller="Home" asp-action="Tracking">Theo dõi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark text-medium" asp-area="">Hỗ trợ</a>
                        </li>
                    </ul>
                </div>
                <div class="login-box">
                    <button class="btn btn-login btn-large text-medium">
                        <a class="text-in-btn" asp-controller="Login" asp-action="Index">Đăng nhập</a>
                    </button>
                    <button class="btn btn-login btn-large text-medium">
                        <a class="text-in-btn" asp-controller="Login" asp-action="Register">Đăng ký</a>
                    </button>
                    <img src="~/imgs/icon.png" alt="icon" class="img-icon" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
