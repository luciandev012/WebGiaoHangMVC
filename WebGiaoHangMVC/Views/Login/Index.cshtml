<section class="login-section">
    <div>
        <form class="login-form" id="loginForm" asp-controller="Login" asp-action="Index" method="post">
            <h3>Đăng nhập</h3>
            <input type="text" name="username" id="username" placeholder="Nhập tên đăng nhập..." class="input-text" />
            <p class="text-danger error" id="username-error">Tên đăng nhập không được để trống!</p>
            <input type="password" name="password" id="password" placeholder="Nhập mật khẩu..." class="input-text" />
            <p class="text-danger error" id="password-error">Mật khẩu không được để trống!</p>
            <div class="action">
                <button class="btn btn-login" type="submit">Đăng nhập</button>
                <a href="#" class="text-in-btn">Quên tên người dùng/mật khẩu?</a>
            </div>
            <p class="agree-text">Bằng cách đăng nhập, tôi đồng ý với <span class="disclaimer">Thỏa thuận của HTH</span></p>
        </form>
    </div>
</section>